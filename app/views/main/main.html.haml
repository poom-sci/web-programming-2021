%h1 Login Form

-# frozen_string_literal: true

= simple_form_for @user, :url => '/login' do |f|
	= f.error_notification
	= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

	.form-inputs
		= f.input :email
		= f.input :password

	.form-actions
		= f.button :submit,'Login',class:'btn btn-outline-primary mt-2'
		= link_to 'Register', "/register",class:"btn btn-warning mt-2"
	


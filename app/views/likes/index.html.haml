%h1 Listing likes

%table{:class=>'display',:id=>'likes-index-table',:style=>'width:100%'}
  %thead
    %tr
      %th User
      %th Post
      %th
      %th
      %th

  %tbody
    - @likes.each do |like|
      %tr
        %td= like.user
        %td= like.post
        %td= link_to 'Show', like
        %td= link_to 'Edit', edit_like_path(like)
        %td= link_to 'Destroy', like, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Like', new_like_path

:javascript 
  $(document).ready(function() {
    $('#likes-index-table').DataTable( {
        columnDefs: [ {
            targets: [ 0 ],
            orderData: [ 0, 1 ]
        }, {
            targets: [ 1 ],
            orderData: [ 1, 0 ]
        } ]
    } );
  } );